<h2>スケジュール編集</h2>

<% if flash.now[:alert] %>
  <p class="alert"><%= flash.now[:alert] %></p>
<% end %>

<%= render "shared/error", obj: @schedule %>

<%= form_with model: @schedule do |f| %>
  <table>
    <tr>
      <th><%= f.label :title, "タイトル" %></th>
      <td><%= f.text_field :title %></td>
    </tr>

    <tr>
      <th><%= f.label :date_start, "開始日" %></th>
      <td><%= f.date_field :date_start %></td>
    </tr>

    <tr>
      <th><%= f.label :date_end, "終了日" %></th>
      <td><%= f.date_field :date_end %></td>
    </tr>

    <tr>
      <th><%= f.label :whole_day, "終日" %></th>
      <td><%= f.check_box :whole_day, {}, "○", "" %></td>
    </tr>

    <tr>
      <th><%= f.label :memo, "メモ" %></th>
      <td><%= f.text_area :memo %></td>
    </tr>
  </table>

  <div>
    <ul>
      <li><%= f.submit "編集完了"%></li>
      <li><%= link_to "一覧へ戻る", schedules_path %></li>
    </ul>
  </div>
<% end %>
