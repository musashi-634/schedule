<h2>スケジュール一覧</h2>

<% if flash[:notice] %>
  <p class="notice"><%= flash[:notice] %></p>
<% end %>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>タイトル</th>
      <th>開始日</th>
      <th>終了日</th>
      <th>終日</th>
      <th>更新日時</th>
      <th>詳細</th>
      <th>編集</th>
      <th>削除</th>
    </tr>
  </thead>

  <tbody>
    <% @schedules.each do |schedule| %>
      <tr>
        <td><%= schedule.id %></td>
        <td><%= schedule.title %></td>
        <td><%= schedule.date_start %></td>
        <td><%= schedule.date_end %></td>
        <td><%= schedule.whole_day %></td>
        <td><%= schedule.updated_at %></td>
        <td>詳細</td>
        <td>編集</td>
        <td>削除</td>
      </tr>
    <% end %>
  </tbody>
</table>

<p><%= link_to "新規登録", new_schedule_path %></p>